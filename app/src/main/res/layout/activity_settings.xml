<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/homebackgroundtwo"
    tools:context="com.duowei.dw_pos.SettingsActivity">
    <LinearLayout
        style="@style/linearLayout_setting"
        android:layout_margin="10dp">
        <TextView
            style="@style/textview_setting"
            android:text="设置"
            android:textColor="@color/colorGreen"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"></View>
    </LinearLayout>
    <LinearLayout
        style="@style/linearLayout_setting">
        <TextView
            style="@style/textview_setting"
            android:text="IP地址"/>
        <EditText
            android:id="@+id/et_ip"
            style="@style/editText_setting"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/linearLayout_setting">
        <TextView
            style="@style/textview_setting"
            android:text="端口"/>
        <EditText
            android:id="@+id/et_port"
            style="@style/editText_setting"
            android:selectAllOnFocus="true"
            android:inputType="number"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/linearLayout_setting">
        <TextView
            style="@style/textview_setting"
            android:text="平板名称"/>
        <EditText
            android:id="@+id/et_pad"
            style="@style/editText_setting"
            android:selectAllOnFocus="true"
            android:hint="如：P1"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_autoStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/tv5"
            style="@style/textview_setting"
            android:text="开机自启动"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="默认自启动"/>
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_land"
            android:textColor="@color/colorWhite"
            android:text="下载数据库"/>
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_cancel"
            android:layout_marginLeft="50dp"
            android:textColor="@color/colorGreen"
            android:text="返回"/>
    </LinearLayout>
</LinearLayout>
