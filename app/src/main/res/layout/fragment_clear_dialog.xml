<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.duowei.dw_pos.dialog.ClearDialogFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/jsj"
                    android:padding="5dp"
                    android:text="收银机号："/>
                <TextView android:id="@+id/yhmc"
                          android:padding="5dp"
                    android:text="收银员号："/>
                <TextView android:id="@+id/count"
                    android:padding="5dp"
                    android:text="销售笔数："/>
                <TextView android:id="@+id/ysje"
                          android:padding="5dp"
                    android:text="原价销售总额："/>
                <TextView android:id="@+id/zk"
                    android:padding="5dp"
                    android:text="折扣金额："/>
                <TextView android:id="@+id/ys"
                    android:padding="5dp"
                    android:text="应收金额："/>
            </TableLayout>
        </RelativeLayout>
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_cancel"
                android:layout_marginLeft="20dp"
                android:text="直接退出"/>
            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_land"
                android:textColor="@color/colorWhite"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="清机下班"/>
        </RelativeLayout>
</LinearLayout>
