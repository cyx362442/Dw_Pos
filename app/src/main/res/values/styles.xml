<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="linearLayout_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="textview_setting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="editText_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>
    <style name="view_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGray</item>
    </style>
    <style name="linearLayout_openTable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="textView_openTable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize20</item>
    </style>
    <style name="editText_openTable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/shape_open_input</item>
    </style>
    <style name="linearLayout_checkOut">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="textView_orange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="CartDetailHeaderStyle">
        <item name="android:padding">6dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">#1eb5ad</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CartDetailItemStyle">
        <item name="android:padding">6dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#4c4c4c</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ButtonCancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_cancel</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:text">取消</item>
    </style>
    <style name="ButtonConfirm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_land</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:text">确定</item>
    </style>
    <!--云会员-->
    <style name="linearLayout_yunhuiyuan">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="textViewYunhuiyuan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorOrange</item>
    </style>
    <style name="textViewYunhuiyuan_green">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textView_yun">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/shape_open_input</item>
    </style>

    <style name="CancelButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:background">@drawable/btn_cancel</item>
    </style>

    <style name="OkButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/btn_ok</item>
    </style>

    <style name="SubmitButtonStyle">
        <item name="android:background">@drawable/btn_submit</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored</item>
    </style>
</resources>
